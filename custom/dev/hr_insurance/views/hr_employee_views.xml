<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--        hr employee form view inherited-->
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherited.hr.insurance</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page name="insurance_ids" string="Insurance">
                    <group>
                        <group>
                            <field name="insurance_percentage">%</field>
                            <field name="insurance_account"/>
                            <field name="insurance_fix_amount_total"/>
                        </group>
                        <group>
                            <field name="deduced_amount_per_year"/>
                            <field name="deduced_amount_per_month"/>
                        </group>
                    </group>
                    <field name="insurance_ids"
                           context="{'default_employee_id':id}"/>
                </page>
            </xpath>
            <xpath expr="//form/header" position="inside">
                <!-- Add your statusbar field -->
                <field name="probation_status"
                  widget="statusbar"/>

                <field name="insurance_payment_status"
                   widget="statusbar"
                        />
                <button name="action_set_complete_insurance_payment"
                        string="Complete Insurance Payment"
                        type="object"
                        class="btn-secondary"
                        invisible="insurance_payment_status == 'complete'"/>

                <button name="action_set_incomplete_insurance_payment"
                        string="Undo Insurance Payment"
                        type="object"
                        class="btn-secondary"
                        invisible="insurance_payment_status == 'incomplete'"/>

                <button name="action_set_on_probation"
                        string="Set On Probation"
                        type="object"
                        class="btn-secondary"
                        invisible="probation_status == 'on_probation'"/>

                <button name="action_set_pass_probation"
                        string="Mark as Passed"
                        type="object"
                        class="btn-primary"
                        invisible="probation_status == 'pass_probation'"/>

            </xpath>
        </field>
    </record>
</odoo>