<odoo>
        <record id="ir_cron_fetch_steel_prices" model="ir.cron">
            <field name="name">Fetch Daily Steel Prices</field>
            <field name="model_id" ref="model_steel_price_history"/>
            <field name="state">code</field>
            <field name="code">model.fetch_prices()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).replace(hour=6, minute=0, second=0)"/>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
</odoo>