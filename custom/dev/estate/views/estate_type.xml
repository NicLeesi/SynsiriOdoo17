<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_property_type_offer" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.offer</field>
        <field name="domain">[('offer_property_type_id', '=', active_id)]</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_property_type_offer_tree" model="ir.ui.view">
        <field name="name">estate.type.offer.tree</field>
        <field name="model">estate.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="offer_price" />
            </tree>

        </field>
    </record>

    <record id="property_type_view_form" model="ir.ui.view">
        <field name="name">estate.type.form</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_button_box " name="button_box">
                    <button name="%(estate.action_property_type_offer)d" string=" " type="action" class="oe_stat_button" icon="fa-money">
                        <field name="offer_count" string=" Offers" widget="statinfo"/>
                    </button>
                </div>
                <header>
                    <div class="oe_title">
                        <h1><field nolabel="1" name="name"/></h1>
                    </div>
                </header>

                <sheet>
                    <notebook>
                        <page string="Property">
                            <field name="property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_type_view_tree" model="ir.ui.view">
        <field name="name">estate.type.tree</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sequence" widget="handle"/>

            </tree>
        </field>
    </record>





    <record id="action_partner_estate_type" model="ir.actions.act_window">
        <field name="name">Properties Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.type</field>
        <field name="view_mode">tree,form</field>

    </record>


    <menuitem id="menu_estate_properties_type"
              name="Properties Type"
              parent="menu_estate_setting"
              action="action_partner_estate_type"
              sequence="10"/>

</odoo>