<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="property_tags_view_form" model="ir.ui.view">
        <field name="name">estate.tags.form</field>
        <field name="model">estate.tags</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
<!--                        <field name="color" widget='badge' options="{'color_field': 'color'}"/>-->
                        <field name="color" widget="color_picker" optional="show"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_tags_view_tree" model="ir.ui.view">
        <field name="name">estate.tags.tree</field>
        <field name="model">estate.tags</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="action_partner_estate_tags" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.tags</field>
        <field name="view_mode">tree,form</field>

    </record>


    <menuitem id="menu_estate_properties_tags"
              name="Tags"
              parent="menu_estate_setting"
              action="action_partner_estate_tags"
              sequence="10"/>

</odoo>