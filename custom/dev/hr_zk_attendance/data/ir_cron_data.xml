
<odoo>
    <data noupdate="1">
        <!-- Scheduled Action: Compute Attendance Colors Daily (Last 60 Days) -->
        <record id="ir_cron_compute_attendance_colors" model="ir.cron">
            <field name="name">Compute Attendance Colors (Last 60 Days)</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model.cron_compute_attendance_colors()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=0, minute=0, second=0)"/>
        </record>
    </data>
</odoo>

