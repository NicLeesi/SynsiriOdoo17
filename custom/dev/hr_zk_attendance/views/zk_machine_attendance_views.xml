<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_zk_machine_attendance_tree" model="ir.ui.view">
        <field name="name">zk.machine.attendance.tree</field>
        <field name="model">zk.machine.attendance</field>
        <field name="arch" type="xml">
            <tree string="Bio Device Attendance" delete="1">
                <field name="employee_id"/>
                <field name="device_id_num"/>
                <field name="punching_time"/>
                <field name="punch_type"/>
                <field name="attendance_type"/>
                <field name="address_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View (Optional but recommended) -->
    <record id="view_zk_machine_attendance_form" model="ir.ui.view">
        <field name="name">zk.machine.attendance.form</field>
        <field name="model">zk.machine.attendance</field>
        <field name="arch" type="xml">
            <form string="Bio Device Attendance">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="device_id_num"/>
                            <field name="punching_time"/>
                        </group>
                        <group>
                            <field name="punch_type"/>
                            <field name="attendance_type"/>
                            <field name="address_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View (for filtering) -->
    <record id="view_zk_machine_attendance_search" model="ir.ui.view">
        <field name="name">zk.machine.attendance.search</field>
        <field name="model">zk.machine.attendance</field>
        <field name="arch" type="xml">
            <search string="Search Bio Device Attendance">
                <field name="employee_id"/>
                <field name="device_id_num"/>
                <field name="punching_time"/>
                <filter string="Today" name="today"
                    domain="[('punching_time', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),
                            ('punching_time', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <filter string="This Week" name="this_week"
                    domain="[('punching_time', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Punch Type" name="group_punch_type" context="{'group_by': 'punch_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_zk_machine_attendance" model="ir.actions.act_window">
        <field name="name">Bio Device Records</field>
        <field name="res_model">zk.machine.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No attendance records from bio device
            </p>
            <p>
                Records are automatically created when downloading from bio device.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_zk_machine_attendance"
              name="Bio Device Records"
              parent="hr_attendance.menu_hr_attendance_root"
              action="action_zk_machine_attendance"
              groups="base.group_system"
              sequence="15"/>
</odoo>