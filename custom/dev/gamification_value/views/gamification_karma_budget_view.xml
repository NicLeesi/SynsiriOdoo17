<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_karma_budget_tree" model="ir.ui.view">
        <field name="name">gamification.karma.budget.tree</field>
        <field name="model">gamification.karma.budget</field>
        <field name="arch" type="xml">
            <tree string="Karma Budgets">
                <field name="manager_id"/>
                <field name="month"/>
                <field name="monthly_limit"/>
                <field name="points_used"/>
                <field name="remaining_points"/>
                <field name="accumulate"/>
            </tree>
        </field>
    </record>

    <record id="view_karma_budget_form" model="ir.ui.view">
        <field name="name">gamification.karma.budget.form</field>
        <field name="model">gamification.karma.budget</field>
        <field name="arch" type="xml">
            <form string="Karma Budget">
                <sheet>
                    <group>
                        <field name="manager_id"/>
                        <field name="month"/>
                        <field name="monthly_limit"/>
                        <field name="points_used" readonly="1"/>
                        <field name="remaining_points" readonly="1"/>
                        <field name="accumulate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_karma_budget" model="ir.actions.act_window">
        <field name="name">Karma Budgets</field>
        <field name="res_model">gamification.karma.budget</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(6, 0, [ref('gamification_value.group_gamification_value_manager')])]"/>
    </record>

    <menuitem id="menu_karma_budget"
              name="Karma Budgets"
              parent="gamification_value.gamification_main_menu"
              action="gamification_value.action_karma_budget"
              sequence="50"
              groups="gamification_value.group_gamification_value_manager"/>
</odoo>
