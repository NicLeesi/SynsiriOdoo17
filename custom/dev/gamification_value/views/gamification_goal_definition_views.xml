<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Contract View -->
    <record id="goal_definition_form_view_inherit" model="ir.ui.view">
        <field name="name">goal.definition.form.view.inherit</field>
        <field name="model">gamification.goal.definition</field>
        <field name="inherit_id" ref="gamification.goal_definition_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="after">
                <label for="code"/>
                    <field name="code" required="1"/>
            </xpath>
        </field>
    </record>
</odoo>


